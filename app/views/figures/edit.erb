<div class="col-sm-6 offset-sm-3">
	<form action="/figures/<%= @figure.id %>" method="POST">
		<input type="hidden" id="hidden" name="_method" value="PATCH">
		<h4>Create a New Figure</h4>
		<div class="form-group">
			<label for="figure_name">Figure Name</label>
			<input type="text" name="figure[name]" placeholder="figure name" class="form-control" id="figure_name" value="<%= @figure.name %>">
		</div>

		<hr>

		<h4>Titles</h4>
		<% @titles.each do |title| %>

		<div class="form-check-inline form-group">
			<input type="checkbox" name="figure[title_ids][]" class="form-check-input" id="title_<%= title.id %>" value="<%= title.id %>" <%= 'checked' if @figure.title_ids.include?(title.id) %>>
			<label for="title_<%= title.id %>" class="form-check-label"><%= title.name %></label>
		</div>

		<% end %>

		<div class="form-group mt-3">
			<label for="new_title">Create New Title:</label>
			<input type="text" class="form-control" name="title[name]" id="new_title" placeholder="new title" >
		</div>

		<hr>

		<h4>Landmarks</h4>
		<% @landmarks.each do |landmark| %>
		<div class="form-check-inline form-group">
			<input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" class="form-check-input" value="<%= landmark.id %>" <%= 'checked' if @figure.landmark_ids.include?(landmark.id) %>>
			<label for="landmark_<%= landmark.id %>" class="form-check-label"><%= landmark.name %></label>
		</div>
		<% end %>

		<h4 class="mt-3">Create New Landmark:</h4>
		<div class="form-group">
			<label for="new_landmark">Name:</label>
			<input type="text" class="form-control" name="landmark[name]" id="new_landmark" placeholder="new landmark name">
		</div>
		<div class="form-group">
			<label for="landmark_year">Year Completed:</label>
			<input type="number" class="form-control" name="landmark[year_completed]" id="landmark_year" placeholder="new landmark year">
		</div>			

		<hr>

		<input type="submit" value="Edit Figure" class="btn btn-outline-secondary">
	</form>
</div>

